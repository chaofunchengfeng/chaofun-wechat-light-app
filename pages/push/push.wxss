/* pages/push/push.wxss */
.page-section-title {
    padding: 20rpx 20rpx;
}

.radios {
    padding: 0 10rpx 20rpx;
    font-size: 28rpx;
    /* display: flex; */
}

.radio-group {}

.aaa {
    display: flex;
}

.aaa label {
    flex: 0 0 190rpx;
    display: flex;
    flex-direction: initial;
}

radio {
    transform: scale(0.8);
}

.title {
    padding: 0 20rpx 20rpx;
}

.title textarea {
    border: 1px solid #ddd;
    box-sizing: border-box;
    padding: 20rpx;
    height: 180rpx;
    border-radius: 10rpx;
}

.page-section {
    /* border-bottom: 1rpx solid #f1f1f1; */
}

.page-section2 {
    display: flex;
    justify-content: space-between;
}

.img_icon {
    width: 100%;
    height: 300rpx;
    background: #f1f1f1;
    font-size: 100rpx;
    color: #999;
    text-align: center;
    line-height: 300rpx;
    border-radius: 10rpx;
}

.preImg {
    height: 300rpx;
    width: 100%;
    overflow: hidden
}

.zhantie {
    float: right;
    margin-right: 20rpx;
    font-size: 24rpx;
    background: orangered;
    color: #fff;
    padding: 6rpx 10rpx;
    border-radius: 10rpx;
}

.weui-input {
    border: 1px solid #f1f1f1;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    height: 78rpx;
    margin-bottom: 16rpx;
    border-radius: 10rpx;
    width: 93%;
}

.add_btn {
    float: right;
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    border: 1rpx solid #999;
    color: #666;
    border-radius: 10rpx;
}

.delete {
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    right: 0rpx;
    top: 20rpx;
    z-index: 1;
}

.imgLists {
    display: flex;
    flex-flow: wrap;
    justify-content: space-between;
}

.imgLists::after {
    content: "";
    display: block;
    width: 33%;
}

.imgItem {
    flex: 0 0 33%;
    height: 234rpx;
    margin-bottom: 4rpx;
    position: relative;
}

.dele {
    position: absolute;
    right: 0;
    top: 0;
    padding: 4rpx 14rpx;
    color: #fff;
    background: rgba(0, 0, 0, 0.5);
    font-size: 22rpx;
    border-radius: 4rpx;
}

.imgItem image {
    width: 100%;
    height: 100%;
}

.conAdd {
    float: right;
    background: #FF9300;
    color: #fff;
    padding: 4rpx 10rpx;
    font-size: 24rpx;
    border-radius: 10rpx;
}

.forum-tag-item {
    display: inline-block;
    margin: 0 10rpx;
    background-color: #e0e0e0;
    padding: 4rpx 20rpx;
    border-radius: 8rpx;
    font-size: 26rpx;
}