/* pages/forum/forum.wxss */
.container{
    display: flex;
    height: 100vh;
}
.left{
    flex: 0 0 180rpx;
    background: #f5f5f5;
    height: 100vh;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch
}
.left_item{
    line-height: 90rpx;
    text-align: center;
    border-right: 1rpx solid #f7f7f7;
    border-bottom: 1rpx solid #f1f1f1;
    font-size: 32rpx;
}
.left_item_active{
    background: #fff;
    border-right-color: transparent;
}
.right{
    flex: 1;
    padding: 20rpx;
    height: 100%;
    overflow-y: auto;
    box-sizing: border-box;
    -webkit-overflow-scrolling: touch;
}
.right_con{
    display: flex;
    flex-flow: wrap;
    /* height: 100%; */
    
    flex-direction: row;
    align-items: stretch;
}
.right_item{
    margin-right: 30rpx;
    border: 1px solid #eee;
    padding: 0 14rpx;
    line-height: 56rpx;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
}
text{
    vertical-align: middle;
}
.right_item image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}
.inputs{
  height: 60rpx;
  background: #fff;
}
.inputs .ii{
  border: 1rpx solid #ddd;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 40rpx;
  height: 60rpx;
  position: fixed;
  top: 0;
  left: 200rpx;
  background: #fff;
  width: 530rpx;
  box-sizing: border-box;
}
.clear{
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 10;
}