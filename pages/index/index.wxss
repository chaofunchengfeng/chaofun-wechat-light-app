.classify-view {
  height: 80rpx;
  min-width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
  font-size: 24rpx;
  padding: 0rpx 0 0;
  overflow-y: hidden;
}

.classify-item {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* width: 22%; */
  margin: 10rpx 0;
  font-size: 30rpx;
  
}
.classify-item view{
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
}
.classify-item:last-child{
  padding-right: 20px;
}

.active{
  color: #fff;
  background: orange;
}
.nothing{
  text-align: center;
  padding-top: 200rpx;
  font-size: 24rpx;
  color: #999;
}
.btn{
  padding: 10rpx 20rpx;
  border: 1px solid #07c160;
  border-radius: 10rpx;
  width: 100rpx;
  font-size: 24rpx;
  margin: 20rpx auto;
  color: #07c160;
}