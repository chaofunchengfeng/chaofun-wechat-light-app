}
.shop-view-top_new{
  width: 92%;
  height: 218rpx;
  flex-direction: row;
  align-items: center;
  margin: 60rpx 0rpx 0rpx 0rpx;
}
.shop-view-top-l {
  display: flex;
  width: 92%;
  height: 80rpx;
  flex-direction: row;
  align-items: center;
  /* margin: 40rpx 0rpx 0rpx 0rpx; */
}


.sort{
  padding: 20rpx;
  margin-top: 10rpx;
  background: #fff;
}




::-webkit-scrollbar-track {
    border-radius: 0;
    padding: 0px 0px;
  }
  
  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    padding: 0;
    width: 0px;
    height: 0px;
    background-color: transparent;
  }
  
  ::-webkit-scrollbar {
    width: 0px;
    height: 0;
    background-color: red;
  }

.nav{
  height: 80rpx;
  /* display: flex; */
  width: 100%;
  overflow-x: scroll;
  box-sizing: border-box;
  background: #fff;
  -webkit-overflow-scrolling: touch;
}
